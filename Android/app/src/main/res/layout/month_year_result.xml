<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_songs"
        android:text="Top Songs:"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/top_artist"
        android:layout_alignEnd="@+id/top_artist" />

    <TextView
        android:id="@+id/top_artist"
        android:text="Top Artists:"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_songs_listview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <ListView
        android:id="@+id/top_songs_listview"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_below="@+id/top_songs"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </ListView>

    <ListView
        android:id="@+id/top_artist_listview"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ListView>

</RelativeLayout>
